





    <!-- DROPDOWN BOX LIST -->
    <div class="dropdown-box-list " data-simplebar>






        {% for item in notificationList %}

            <!-- DROPDOWN BOX LIST ITEM -->
            <div class="dropdown-box-list-item unread"  href="{{ item.notification.link  }}">

                <!-- USER STATUS -->
                <div class="user-status notification">
                    <!-- USER STATUS AVATAR -->
                    <a class="user-status-avatar" href="{{ item.notification.link  }}">
                        <!-- USER AVATAR -->
                        <div class="user-avatar small no-outline">
                            <!-- USER AVATAR CONTENT -->
                            <div class="user-avatar-content">
                                <!-- HEXAGON -->
                                <div class="hexagon-image-30-32" data-src="{{ asset('uploads/'~item.notification.subject) }}"></div>
                                <!-- /HEXAGON -->
                            </div>
                            <!-- /USER AVATAR CONTENT -->

                            <!-- USER AVATAR PROGRESS -->
                            <div class="user-avatar-progress">
                                <!-- HEXAGON -->
                                <div class="hexagon-progress-40-44"></div>
                                <!-- /HEXAGON -->
                            </div>
                            <!-- /USER AVATAR PROGRESS -->

                            <!-- USER AVATAR PROGRESS BORDER -->
                            <div class="user-avatar-progress-border">
                                <!-- HEXAGON -->
                                <div class="hexagon-border-40-44"></div>
                                <!-- /HEXAGON -->
                            </div>
                            <!-- /USER AVATAR PROGRESS BORDER -->

                            <!-- USER AVATAR BADGE -->
                            <div class="user-avatar-badge">
                                <!-- USER AVATAR BADGE BORDER -->
                                <div class="user-avatar-badge-border">
                                    <!-- HEXAGON -->
                                    <div class="hexagon-22-24"></div>
                                    <!-- /HEXAGON -->
                                </div>
                                <!-- /USER AVATAR BADGE BORDER -->

                                <!-- USER AVATAR BADGE CONTENT -->
                                <div class="user-avatar-badge-content">
                                    <!-- HEXAGON -->
                                    <div class="hexagon-dark-16-18"></div>
                                    <!-- /HEXAGON -->
                                </div>
                                <!-- /USER AVATAR BADGE CONTENT -->

                                <!-- USER AVATAR BADGE TEXT -->
                                <p class="user-avatar-badge-text">16</p>
                                <!-- /USER AVATAR BADGE TEXT -->
                            </div>
                            <!-- /USER AVATAR BADGE -->
                        </div>
                        <!-- /USER AVATAR -->
                    </a>
                    <!-- /USER STATUS AVATAR -->

                    {% if item.notification.message==1 %}
                    <!-- USER STATUS TITLE -->
                    <p class="user-status-title"><a class="bold" href="#"></a>  left a like <img class="reaction" src="{{ asset('template/img/reaction/like.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                    <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==2 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a love <img class="reaction" src="{{ asset('template/img/reaction/love.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==3 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a dislike <img class="reaction" src="{{ asset('template/img/reaction/dislike.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==4 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a solidaire <img class="reaction" src="{{ asset('template/img/reaction/solidaire.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==5 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a funny <img class="reaction" src="{{ asset('template/img/reaction/funny.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==6 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a wow <img class="reaction" src="{{ asset('template/img/reaction/wow.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==7 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a angry <img class="reaction" src="{{ asset('template/img/reaction/angry.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% elseif item.notification.message==8 %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="#"></a>  left a sad <img class="reaction" src="{{ asset('template/img/reaction/sad.png') }}" alt="reaction-like"> reaction on a <a class="highlighted" href="{{ item.notification.link  }}">Blog</a></p>
                        <!-- /USER STATUS TITLE -->

                    {% else %}
                        <!-- USER STATUS TITLE -->
                        <p class="user-status-title"><a class="bold" href="{{ item.notification.link  }}"></a> {{ item.notification.message }}</a></p>
                        <!-- /USER STATUS TITLE -->
                    {% endif %}

                    <!-- USER STATUS TIMESTAMP -->
                    <p class="user-status-timestamp">

                        {% if "now" |date("U") + 3600  > item.notification.date |date("U") + 31104000 %}
                            il ya {{ ("now" |date("U") + 3600  - item.notification.date |date("U") ) |date("Y") }} ans
                        {% elseif "now" |date("U") + 3600  > item.notification.date |date("U") + 2592000 %}
                            il ya  {{ ("now" |date("U") + 3600  - item.notification.date |date("U") ) |date("m") }} moiss
                        {% elseif "now" |date("U") + 3600  > item.notification.date |date("U") + 86400 %}
                            il ya {{ ("now" |date("U") + 3600  - item.notification.date |date("U") ) |date("d") }} jours
                        {% elseif "now" |date("U") + 3600  > item.notification.date |date("U") + 3600  %}
                            il ya {{ ("now" |date("U") + 3600  - item.notification.date |date("U") ) |date("H") }} heures
                        {% elseif "now" |date("U") + 3600  > item.notification.date |date("U") + 60 %}
                            il ya {{ ("now" |date("U") + 3600  - item.notification .date|date("U") ) |date("i") }} minutes
                        {% elseif "now" |date("U") + 3600  > item.notification.date |date("U")  %}
                            il ya  {{ ("now" |date("U") + 3600  - item.notification.date |date("U") ) |date("s") }} secondes
                        {% endif %}

                    </p>
                    <!-- /USER STATUS TIMESTAMP -->



                    <!-- USER STATUS ICON -->
                    <div class="user-status-icon">
                        {% if item.seen==0 %}

                            <form action="{{ mgilet_notification_generate_path('notification_mark_as_seen', item.notifiableEntity, item.notification) }}"
                                  method="post">
                                <button type="submit">
                                    <!-- MARK READ BUTTON -->
                                    <i class="fa fa-eye-slash" style="font-size:20px;color:blue"></i>
                                    <!-- /MARK READ BUTTON -->
                                </button>
                            </form>
                        {% else %}

                            <form action="{{ mgilet_notification_generate_path('notification_mark_as_unseen', item.notifiableEntity, item.notification) }}"
                                  method="post">
                                <button type="submit">
                                    <!-- MARK READ BUTTON -->
                                    <i class="fa fa-eye" style="font-size:20px;color:blue"></i>
                                    <!-- /MARK READ BUTTON -->
                                </button>
                            </form>

                        {% endif %}



                    </div>
                    <!-- /USER STATUS ICON -->
                </div>
                <!-- /USER STATUS -->

            </div>
            <!-- /DROPDOWN BOX LIST ITEM -->
        {% endfor %}

    </div>
    <!-- /DROPDOWN BOX LIST -->


